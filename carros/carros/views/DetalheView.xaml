<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carros.views.DetalheView">
    <ContentPage.Content>
        <StackLayout Padding="25">
            <TableView Intent="Settings"  >
                <TableRoot>
                    <TableSection Title="Acessórios">
                        <SwitchCell Text="{Binding AcessorioValorado}" On="{Binding Ativo}" ></SwitchCell>
                        <TextCell Text="Total de Acessórios"></TextCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button x:Name="btnProsseguir" Text="Prosseguir" Clicked="btnProsseguir_Clicked" VerticalOptions="End"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>